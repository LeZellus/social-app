{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6">
    
    {% for message in app.flashes('success') %}
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
            {{ message }}
            <button type="button" class="float-right text-green-600 hover:text-green-800">√ó</button>
        </div>
    {% endfor %}

    <!-- Header Profile -->
    <div class="bg-white rounded-2xl shadow-sm border p-8 mb-6">
        <div class="flex justify-between items-start mb-8">
            <div class="flex items-center space-x-6">
                <div class="w-20 h-20 bg-rose-500 rounded-full flex items-center justify-center text-white text-2xl font-semibold">
                    {{ user.displayName|first|upper }}
                </div>
                <div>
                    <h1 class="text-2xl font-semibold text-gray-900">{{ user.displayName }}</h1>
                    {% if user.pseudo and user.pseudo != user.displayName %}
                        <p class="text-gray-500">{{ user.pseudo }}</p>
                    {% endif %}
                    <p class="text-sm text-gray-400 mt-1">Membre depuis {{ user.createdAt|date('F Y') }}</p>
                </div>
            </div>
            <a href="{{ path('app_profile_edit') }}" class="bg-gray-900 text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors">
                Modifier
            </a>
        </div>

        <!-- Profile Details -->
        <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Email</dt>
                    <dd class="text-gray-900">{{ user.email }}</dd>
                </div>
                {% if user.website %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Site web</dt>
                    <dd><a href="{{ user.website }}" target="_blank" class="text-rose-500 hover:text-rose-600">üåê {{ user.website }}</a></dd>
                </div>
                {% endif %}
            </div>
            <div class="space-y-4">
                {% if user.firstName or user.lastName %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Nom complet</dt>
                    <dd class="text-gray-900">{{ user.firstName }} {{ user.lastName }}</dd>
                </div>
                {% endif %}
                {% if user.timezone %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Fuseau horaire</dt>
                    <dd class="text-gray-900">üïê {{ user.timezone }}</dd>
                </div>
                {% endif %}
            </div>
        </div>

        {% if user.bio %}
        <div class="mt-6 pt-6 border-t border-gray-100">
            <h3 class="text-sm font-medium text-gray-500 mb-2">√Ä propos</h3>
            <p class="text-gray-700">{{ user.bio|nl2br }}</p>
        </div>
        {% endif %}
    </div>

    <!-- Connected Accounts -->
    <div class="bg-white rounded-2xl shadow-sm border p-8 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Comptes connect√©s</h2>
        {% if user.socialAccounts|length > 0 %}
            <div class="grid md:grid-cols-2 gap-4">
                {% for account in user.socialAccounts %}
                    {% if account.isActive %}
                    <div class="flex items-center p-4 border border-gray-200 rounded-xl hover:border-gray-300 transition-colors">
                        {% if account.platform == 'reddit' %}
                            <div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center text-white text-xl mr-4">üî¥</div>
                            <div>
                                <div class="font-medium text-gray-900">Reddit</div>
                                <div class="text-sm text-gray-500">u/{{ account.accountName }}</div>
                            </div>
                        {% endif %}
                    </div>
                    {% endif %}
                {% endfor %}
                <a href="{{ path('reddit_home') }}" class="flex items-center justify-center p-4 border-2 border-dashed border-gray-300 rounded-xl hover:border-gray-400 transition-colors text-gray-500 hover:text-gray-700">
                    <span class="text-2xl mr-2">+</span>
                    Connecter Reddit
                </a>
            </div>
        {% else %}
            <div class="text-center py-8">
                <p class="text-gray-500 mb-4">Aucun compte connect√©</p>
                <a href="{{ path('reddit_home') }}" class="bg-rose-500 text-white px-6 py-2 rounded-lg hover:bg-rose-600 transition-colors">
                    Connecter Reddit
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Stats -->
    {% if user.posts|length > 0 %}
    <div class="bg-white rounded-2xl shadow-sm border p-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Mes statistiques</h2>
        <div class="grid grid-cols-3 gap-6 text-center">
            <div class="p-4">
                <div class="text-3xl font-bold text-gray-900">{{ user.posts|length }}</div>
                <div class="text-sm text-gray-500 mt-1">Posts cr√©√©s</div>
            </div>
            <div class="p-4">
                {% set publishedCount = 0 %}
                {% for post in user.posts %}
                    {% if post.status == 'published' %}
                        {% set publishedCount = publishedCount + 1 %}
                    {% endif %}
                {% endfor %}
                <div class="text-3xl font-bold text-green-600">{{ publishedCount }}</div>
                <div class="text-sm text-gray-500 mt-1">Publi√©s</div>
            </div>
            <div class="p-4">
                <div class="text-3xl font-bold text-blue-600">{{ user.socialAccounts|length }}</div>
                <div class="text-sm text-gray-500 mt-1">Comptes</div>
            </div>
        </div>
    </div>
    {% endif %}

</div>
{% endblock %}