{% extends 'base.html.twig' %}

{% block title %}Mes Posts{% endblock %}

{% block body %}
<div class="sm:ml-64 p-4 lg:p-6 min-h-screen">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Mes Posts</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">
                Gérez vos publications sur les réseaux sociaux
            </p>
        </div>
        <a href="{{ path('app_post_new') }}" class="btn">
            {{ ux_icon('bi:pencil-square', {class: 'w-5 h-5 mr-2'}) }}
            Nouveau Post
        </a>
    </div>

    {% if posts is empty %}
        <!-- Empty State -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-12 text-center">
            <div class="max-w-md mx-auto">
                {{ ux_icon('bi:file-earmark', {class: 'w-16 h-16 mx-auto text-gray-400 mb-4'}) }}
                <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-2">Aucun post pour le moment</h3>
                <p class="text-gray-500 dark:text-gray-400 mb-6">
                    Commencez par créer votre premier post pour partager votre contenu sur les réseaux sociaux.
                </p>
                <a href="{{ path('app_post_new') }}" class="btn">
                    {{ ux_icon('bi:pencil-square', {class: 'w-5 h-5 mr-2'}) }}
                    Créer mon premier post
                </a>
            </div>
        </div>
    {% else %}
        <!-- Posts Grid -->
        <div class="grid gap-6">
            {% for post in posts %}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-shadow">
                    <div class="p-6">
                        <div class="flex items-start justify-between">
                            <div class="flex-1 min-w-0">
                                <!-- Status Badge -->
                                <div class="flex items-center gap-3 mb-3">
                                    {% if post.status == 'published' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                            </svg>
                                            Publié
                                        </span>
                                    {% elseif post.status == 'scheduled' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                            </svg>
                                            Programmé
                                        </span>
                                    {% elseif post.status == 'pending' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                                            <svg class="w-3 h-3 mr-1 animate-spin" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            En attente
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M4 2a2 2 0 00-2 2v11a2 2 0 002 2h12a2 2 0 002-2V4a2 2 0 00-2-2H4zm3 2h6v2H7V4zm8 4a1 1 0 100-2 1 1 0 000 2zm-8 2v4h8v-4H7z" clip-rule="evenodd"></path>
                                            </svg>
                                            Brouillon
                                        </span>
                                    {% endif %}
                                    
                                    {% if post.scheduledAt %}
                                        <span class="text-sm text-gray-500 dark:text-gray-400">
                                            {{ post.scheduledAt|date('d/m/Y H:i') }}
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Title -->
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                                    {{ post.title }}
                                </h3>

                                <!-- Content Preview -->
                                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                                    {{ post.content|length > 150 ? post.content|slice(0, 150) ~ '...' : post.content }}
                                </p>

                                <!-- Publications Info -->
                                {% if post.postPublications is not empty %}
                                    <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                                            </svg>
                                            {{ post.postPublications|length }} destination(s)
                                        </div>
                                        
                                        <!-- Platforms Icons -->
                                        <div class="flex items-center space-x-1">
                                            {% set platforms = [] %}
                                            {% for publication in post.postPublications %}
                                                {% set platform = publication.socialAccount.platform %}
                                                {% if platform not in platforms %}
                                                    {% set platforms = platforms|merge([platform]) %}
                                                    {% if platform == 'reddit' %}
                                                        <div class="w-5 h-5 bg-orange-500 rounded-full flex items-center justify-center">
                                                            <span class="text-white text-xs font-bold">R</span>
                                                        </div>
                                                    {% elseif platform == 'twitter' %}
                                                        <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center">
                                                            <span class="text-white text-xs font-bold">T</span>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}

                                <!-- Created Date -->
                                <div class="mt-3 text-sm text-gray-500 dark:text-gray-400">
                                    Créé le {{ post.createdAt|date('d/m/Y à H:i') }}
                                </div>
                            </div>

                            <!-- Actions Menu -->
                            <div class="relative ml-4">
                                <button type="button" class="post-menu-button p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" data-post-id="{{ post.id }}">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                                    </svg>
                                </button>
                                
                                <div class="post-menu hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10" data-post-id="{{ post.id }}">
                                    <div class="py-1">
                                        <a href="{{ path('app_post_edit', {id: post.id}) }}" 
                                           class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600">
                                            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                            Modifier
                                        </a>
                                        
                                        {% if post.status == 'draft' %}
                                            <a href="{{ path('app_post_publish', {id: post.id}) }}" 
                                               class="block px-4 py-2 text-sm text-green-700 dark:text-green-400 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                                </svg>
                                                Publier maintenant
                                            </a>
                                        {% endif %}
                                        
                                        <form method="post" action="{{ path('app_post_delete', {id: post.id}) }}" class="inline">
                                            <button type="submit" 
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')"
                                                    class="w-full text-left block px-4 py-2 text-sm text-red-700 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-600">
                                                <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<!-- JavaScript for dropdown menus -->
<script>
document.addEventListener('turbo:load', function() {
    // Handle dropdown menus
    const menuButtons = document.querySelectorAll('.post-menu-button');
    
    menuButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.stopPropagation();
            e.preventDefault();
            
            const postId = this.dataset.postId;
            // CORRECTION: Chercher le menu avec l'attribut data-post-id correspondant
            const menu = document.querySelector(`.post-menu[data-post-id="${postId}"]`);
            
            if (!menu) {
                console.warn(`Menu non trouvé pour le post ${postId}`);
                return;
            }
            
            // Close all other menus first
            document.querySelectorAll('.post-menu').forEach(otherMenu => {
                if (otherMenu !== menu) {
                    otherMenu.classList.add('hidden');
                }
            });
            
            // Toggle current menu
            menu.classList.toggle('hidden');
        });
    });
    
    // Close menus when clicking outside
    document.addEventListener('click', function(e) {
        // Ne pas fermer si on clique sur un bouton de menu ou à l'intérieur d'un menu
        if (!e.target.closest('.post-menu-button') && !e.target.closest('.post-menu')) {
            document.querySelectorAll('.post-menu').forEach(menu => {
                menu.classList.add('hidden');
            });
        }
    });
    
    // Empêcher la fermeture du menu quand on clique à l'intérieur
    document.querySelectorAll('.post-menu').forEach(menu => {
        menu.addEventListener('click', function(e) {
            e.stopPropagation();
        });
    });
});
</script>
{% endblock %}